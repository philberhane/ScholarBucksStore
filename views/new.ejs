		<div class = "field">
			<label>Username</label>
			<input type = "text" name = "student[username]" placeholder = "Username">
		</div>
		<div class = "field">
			<label>First Name</label>
			<input type = "text" name = "student[firstname]" placeholder = "First Name">
		</div>
			<div class = "field">
			<label>Last Name</label>
			<input type = "text" name = "student[lastname]" placeholder = "Last Name">
