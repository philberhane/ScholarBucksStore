<% include ./partials/header %>

<div class = "ui main text container segment">
	<div class = "ui huge header">New Prize</div>
	<form class = "ui form" action = "/prizes" method = "POST">
		<div class = "field">
			<label>Prize Name</label>
			<input type = "text" name = "prize[prizename]" placeholder = "Prize Name">
		</div>
			<div class = "field">
			<label>Prize Points</label>
			<input type = "text" name = "prize[prizepoints]" placeholder = "Prize Points">
		</div>
			<div class = "field">
			<label>Amout In Inventory</label>
			<input type = "text" name = "prize[invamount]" placeholder = "Amount In Inventory">
		</div>
			<div class = "field">
			<label>Prize Image</label>
			<input type="text" name="prize[prizeimage]" placeholder="Prize URL"> 
		</div>
		<h4>
			IF the prize is a book please fill out the below fields
		</h4>
		<div class = "field">
		<label>Grade Level</label>
			<input type="text" name="prize[gradeLevel]" placeholder="e.g. 5th Grade"> 
		</div>
		<div class = "field">
		<label>Type of Book</label>
			<input type="text" name="prize[type]" placeholder="e.g. adventure"> 
		</div>
		<div class = "field">
		<label>Gender this book is meant for</label>
			<input type="text" name="prize[gender]" placeholder=""> 
		</div>
		<input type="hidden" name="prize[quantity]" value="0">
			
		<input class="ui primary button" type = "submit"  >
	</form>
</div>

<% include ./partials/footer %>