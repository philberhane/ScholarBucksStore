			<div class = "field">
			<label>Math Points</label>
			<input type = "text" name = "student[mathpts]" placeholder = "Math Points">
		</div>
			<div class = "field">
			<label>Reading Points</label>
			<input type = "text" name = "student[readingpts]" placeholder = "Reading Points">
		</div>
			<div class = "field">
			<label>School</label>
			<input type = "text" name = "student[school]" placeholder = "School">
		</div>
			<div class = "field">
			<label>Grade</label>
			<input type = "text" name = "student[grade]" placeholder = "Grade">
		</div>
			<div class = "field">
			<label>Math Teacher</label>
			<input type = "text" name = "student[mathteacher]" placeholder = "Math Teacher">
		</div>
			<div class = "field">
			<label>Reading Teacher</label>
			<input type = "text" name = "student[readingteacher]" placeholder = "Reading Teacher">
